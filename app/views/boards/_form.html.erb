<%= form_with model: board, local: true do |f| %>
  <div class="form-group mt-2 text-black-50">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group mt-2 text-black-50">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>

  <div class="form-group mt-4">
    <%= f.fields_for :images do |m| %>
      <%= m.file_field :image, multiple: true, name: "images[image][]" %>
      <%= hidden_field :images, :post_id, value: @board.id %>
    <% end %>
  </div>
  <span class="upload_limit mt-2 text-black-50">最大10枚までアップロードできます</span>

  <div class="form-group mt-4 mb-4 d-flex justify-content-between">
    <%= f.submit "登録", class: 'btn btn-primary btn-custom' %>
  </div>
<% end %>
