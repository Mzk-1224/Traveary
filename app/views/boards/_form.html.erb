<%= form_with model: board, local: true do |f| %>
  <div class="form-group mt-4 text-black-50" style="font-family: Kiwi Maru;">
    <%= f.label :prefecture_id, '旅行した都道府県' %>
    <%= f.collection_select :prefecture_id, @prefectures, :id, :name %>
  </div>

  <div class="form-group mt-2 text-black-50">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group mt-2 text-black-50">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>

  <div class="form-group mt-4" style="font-family: Kiwi Maru;">
    <div class="image-new__field__uploader">
      <%= f.fields_for :images do |image| %>
        <% if image.object.persisted? %>
          <div class="existing-image">
            <%= image_tag image.object.image.url, class: 'img-fluid', size: '260x195' %>
            <%= image.check_box :_destroy %> 削除
          </div>
        <% end %>
        <ul id="previews">
          <li class="input">
            <label class="upload-label">
              <div class="upload-label__text">
                <p>クリックしてファイルをアップロード</p>
              </div>
              <div class="input-area">
                <%= image.file_field :image, multiple: true, class: "hidden image_upload" %>
              </div>
            </label>
          </li>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="form-group mt-4 mb-4 d-flex justify-content-between" style="font-family: Kiwi Maru;">
    <%= f.submit "登録", class: 'btn btn-primary btn-custom' %>
  </div>
<% end %>
