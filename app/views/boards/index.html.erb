<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class='top-wrapper'>
        <div class='top-inner-text'>
          <h1>Travel + Diary</h1>
        </div>
          <p class='top-inner-comment'>- 旅の思い出をとっておく場所 -</p>
      </div>
    </div>
  </div>

  <!-- 旅行した都道府県の情報 -->
  <% if current_user.present? %>
    <%= render 'prefecture' %>
  <% end %>

  <!-- 掲示板一覧 -->
  <div class="row pt-5">
    <div class="col-12">
      <div class="row">
        <% if @boards.present? %>
          <%= render @boards %>
        <% else %>
          <p class="text-center"><%= t('.no_result') %></p>
        <% end %>
      </div>
      <%= paginate @boards, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>
