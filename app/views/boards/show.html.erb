<% content_for(:title, @board.title) %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h2 class="d-inline" style='margin-left: 20px'><%= @board.title %></h2>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <% if @board.board_image.present? %>
              <div class='col-md-6 offset-md-3 text-center'>
                <%= image_tag @board.board_image.url, class: "card-img-top img-fluid", size: '300x200' %>
              </div>
            <% end %>
            <% if current_user&.own?(@board) %>
              <div class='d-flex justify-content-end'>
                <%= render 'crud_menus', board: @board %>
              </div>
            <% end %>
            <div class='col-md-6' style='margin: 10px'>
              <p><%= simple_format(@board.body) %></p>
              <ul class="list-inline" style="padding-top: 20px">
                <li class="list-inline-item"><%= "by #{@board.user.user_name}" %></li>
                <li class="list-inline-item"><%= l @board.created_at, format: :long %></li>
              </ul>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>
